    "axios": "^0.18.0",
    "bootstrap-vue": "^2.0.0-rc.15",
    "css-element-queries": "^1.1.1",
    "file-saver": "^2.0.1",
    "gbv-login-client": "^0.2.5",
    "jquery": "^3.4.0",
    "jskos-tools": "^0.2.0",
    "json-format-highlight": "^1.0.1",
    "localforage": "^1.7.3",
